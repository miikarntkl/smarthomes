<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.ReportFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:id="@+id/reportView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/chart"
                android:layout_width="388dp"
                android:layout_height="245dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="27dp"
                app:layout_constraintHorizontal_bias="0.428"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="95dp"
                android:layout_height="75dp"
                android:layout_marginLeft="-2dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="kWh"
                android:textAlignment="center"
                android:textSize="36sp"
                app:layout_constraintLeft_toRightOf="@+id/usageText"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <TextView
                android:id="@+id/usageText"
                android:layout_width="95dp"
                android:layout_height="75dp"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="-"
                android:textAlignment="center"
                android:textSize="36sp"
                app:layout_constraintLeft_toRightOf="@+id/dayText"
                app:layout_constraintTop_toBottomOf="@+id/costText" />

            <TextView
                android:id="@+id/costText"
                android:layout_width="95dp"
                android:layout_height="75dp"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="27dp"
                android:gravity="center"
                android:text="-"
                android:textAlignment="center"
                android:textSize="36sp"
                app:layout_constraintLeft_toRightOf="@+id/dayText"
                app:layout_constraintTop_toBottomOf="@+id/chart" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="95dp"
                android:layout_height="75dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="27dp"
                android:gravity="center"
                android:text="â‚¬"
                android:textAlignment="center"
                android:textSize="36sp"
                app:layout_constraintLeft_toRightOf="@+id/costText"
                app:layout_constraintTop_toBottomOf="@+id/chart" />

            <TextView
                android:id="@+id/dayText"
                android:layout_width="95dp"
                android:layout_height="75dp"
                android:layout_marginLeft="39dp"
                android:layout_marginTop="58dp"
                android:gravity="center"
                android:text="-"
                android:textAlignment="center"
                android:textSize="36sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chart" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</FrameLayout>
