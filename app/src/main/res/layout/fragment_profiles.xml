<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.ProfilesFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:id="@+id/profilesView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ToggleButton
            android:id="@+id/safeModeToggle"
            style="@android:style/Widget.Holo.Light.Button.Borderless.Small"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/profile_toggle"
            android:text="ToggleButton"
            android:textOff="Safe   Mode"
            android:textOn="SAFE MODE"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/absentToggle" />

        <ToggleButton
            android:id="@+id/absentToggle"
            style="@android:style/Widget.Holo.Light.Button.Borderless.Small"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/profile_toggle"
            android:text="ToggleButton"
            android:textOff="Absent"
            android:textOn="ABSENT"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/homeToggle" />

        <ToggleButton
            android:id="@+id/arrivingToggle"
            style="@android:style/Widget.Holo.Light.Button.Borderless.Small"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_marginRight="68dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/profile_toggle"
            android:text="ToggleButton"
            android:textOff="Arriving Home"
            android:textOn="ARRIVING HOME"
            android:textSize="24sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/energySavingToggle" />

        <ToggleButton
            android:id="@+id/homeToggle"
            style="@android:style/Widget.Holo.Light.Button.Borderless.Small"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="95dp"
            android:background="@drawable/profile_toggle"
            android:text="ToggleButton"
            android:textOff="Home"
            android:textOn="HOME"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ToggleButton
            android:id="@+id/energySavingToggle"
            style="@android:style/Widget.Holo.Light.Button.Borderless.Small"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_marginRight="68dp"
            android:layout_marginTop="95dp"
            android:background="@drawable/profile_toggle"
            android:text="ToggleButton"
            android:textOff="Energy Saving"
            android:textOn="ENERGY SAVING"
            android:textSize="24sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ToggleButton
            android:id="@+id/lightsOnToggle"
            style="@android:style/Widget.Holo.Light.Button.Borderless.Small"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_marginRight="68dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/profile_toggle"
            android:text="ToggleButton"
            android:textOff="Lights     On"
            android:textOn="LIGHTS   ON"
            android:textSize="24sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/arrivingToggle" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SELECT PROFILE"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />
    </android.support.constraint.ConstraintLayout>
</FrameLayout>
